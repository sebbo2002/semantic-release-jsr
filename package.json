        "@semantic-release/git": "^10.0.1",
        "@semantic-release/npm": "^12.0.1",
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.15.18",
        "@types/signale": "^1.4.7",
        "c8": "^10.1.3",
        "eslint": "^9.27.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-jsonc": "^2.20.1",
        "eslint-plugin-perfectionist": "^4.13.0",
        "esm": "^3.2.25",
        "husky": "^9.1.7",
        "license-checker": "^25.0.1",
